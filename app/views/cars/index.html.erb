<p id="notice"><%= notice %></p>

<h1 style="font-family:Consolas;color:#0000ff;font-size:32px;">Cars</h1>

<table border="4" bordercolor=#0000ff>
  <thead>
  <col width="130">
  <col width="80">
    <tr style="font-size:15px;">

      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make.name %></td>
        <td><%= car.car_model %></td>
        <td><%= car.vin %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= form_tag(search_parts_url, method: "get") do %>
      <%= label_tag(:query, "Search for:") %>
      <%= text_field_tag(:query) %>
      <%= submit_tag("Search") %>
    <% end %>
  </tbody>
</table>

<br>

